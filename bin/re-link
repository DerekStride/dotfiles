#!/usr/bin/env bash
#
# link all .symlink files.

cd "$(dirname "$0")/.."
DOTFILES_ROOT=$(pwd -P)

set -e

info () {
  printf "\r  [ \033[00;34m..\033[0m ] $1\n"
}

user () {
  printf "\r  [ \033[0;33m??\033[0m ] $1\n"
}

success () {
  printf "\r\033[2K  [ \033[00;32mOK\033[0m ] $1\n"
}

fail () {
  printf "\r\033[2K  [\033[0;31mFAIL\033[0m] $1\n"
  echo ''
  exit
}

configure_file () {
  local src=$1 dst=$2

  local overwrite= backup= skip=
  local action=

  if [ -f "$dst" -o -d "$dst" -o -L "$dst" ]
  then

    if [ "$overwrite_all" == "false" ] && [ "$backup_all" == "false" ] && [ "$skip_all" == "false" ]
    then

      local currentSrc="$(readlink $dst)"

      if [ "$currentSrc" == "$src" ]
      then

        skip=true;

      else

        user "File already exists: $dst ($(basename "$src")), what do you want to do?\n\
        [s]kip, [S]kip all, [o]verwrite, [O]verwrite all, [b]ackup, [B]ackup all?"
        read -n 1 action

        case "$action" in
          o )
            overwrite=true;;
          O )
            overwrite_all=true;;
          b )
            backup=true;;
          B )
            backup_all=true;;
          s )
            skip=true;;
          S )
            skip_all=true;;
          * )
            ;;
        esac

      fi

    fi

    overwrite=${overwrite:-$overwrite_all}
    backup=${backup:-$backup_all}
    skip=${skip:-$skip_all}

    if [ "$overwrite" == "true" ]
    then
      rm -rf "$dst"
      success "removed $dst"
    fi

    if [ "$backup" == "true" ]
    then
      mv "$dst" "${dst}.backup"
      success "moved $dst to ${dst}.backup"
    fi

    if [ "$skip" == "true" ]
    then
      success "skipped $src"
      return 1
    fi
  fi

  if [ "$skip" != "true" ]  # "false" or empty
  then
    return 0
    ln -s "$1" "$2"
    success "linked $1 to $2"
  fi
}


link_file () {
  local overwrite_all=false backup_all=false skip_all=false

  if configure_file "$1" "$2"
  then
    ln -s "$1" "$2"
    success "linked $1 to $2"
  fi
}

copy_file () {
  local overwrite_all=false backup_all=false skip_all=false

  if configure_file "$1" "$2"
  then
    cp "$1" "$2"
    success "copied $1 to $2"
  fi

}

install_dotfiles () {
  info 'installing dotfiles'

  local overwrite_all=false backup_all=false skip_all=false

  for src in $(find -H "$DOTFILES_ROOT" -maxdepth 2 -name '*.symlink' -not -path '*.git*')
  do
    dst="$HOME/.$(basename "${src%.*}")"
    link_file "$src" "$dst"
  done
}

install_config () {
  info 'installing config'

  local overwrite_all=false backup_all=false skip_all=false

  for src in $(find -H "$DOTFILES_ROOT/config" -maxdepth 2 -name '*.symlink' -not -path '*.git*')
  do
    basedir=$(basename $(dirname $src))
    dst=
    if [ "$basedir" == "config" ]
    then
      [ ! -d "$HOME/.config" ] && mkdir "$HOME/.config"
      dst="$HOME/.config/$(basename "${src%.*}")"
    else
      [ ! -d "$HOME/.config/$basedir" ] && mkdir -p "$HOME/.config/$basedir"
      dst="$HOME/.config/$basedir/$(basename "${src%.*}")"
    fi
    link_file "$src" "$dst"
  done
}

install_githooks () {
  info 'installing git hooks'

  local overwrite_all=false backup_all=false skip_all=false

  [ ! -d "$HOME/.git-templates/hooks" ] && mkdir -p "$HOME/.git-templates/hooks"

  for src in $(find -H "$DOTFILES_ROOT/git/templates/hooks" -type f)
  do
    dst="$HOME/.git-templates/hooks/$(basename "$src")"
    copy_file "$src" "$dst"
  done
}

install_dotfiles
install_config
install_githooks

