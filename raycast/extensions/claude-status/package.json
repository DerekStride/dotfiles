{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "claude-status",
  "title": "Claude Status",
  "description": "View and switch between Claude Code instances running in tmux",
  "icon": "icon.png",
  "author": "derek",
  "categories": ["Developer Tools", "Productivity"],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Claude Instances",
      "description": "List all Claude Code instances and their status",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.64.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.8",
    "@types/node": "20.8.10",
    "@types/react": "19.0.10",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
